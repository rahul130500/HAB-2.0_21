<header>
    <style>
        .overlay {
            /* content: '\A'; */
            position: absolute;
            width: 100%;
            height: 100%;
            top: 0;
            left: 0;
            background: rgba(0, 0, 0, 0.30);
            /* opacity: 0; */
            /* transition: all 1s;
            -webkit-transition: all 1s; */
            z-index: 5;
        }
        .splide__slide img {
         height: 75vh;
         width: 100%;
         z-index:-100;

        }
        .splide__slide{
        width:100%;
        padding: 0;
        margin: 0;

        }
    </style>
    </div>
    <div class="contain">
        <div id="image-slider" class="splide">
            <div class="splide__track">
                
                <ul class="splide__list">
                    <% uploadImages.forEach((image)=>{ %>
                        <li class="splide__slide">
                            <img data-splide-lazy="/hab/<%=image %>" alt="">
                        </li>
                    <% }) %> 
                </ul>
                <section id="top">
                    <div class="top_content relative w-11/12 md:w-4/5 h-full mx-auto z-10 flex flex-col md:flex-row">
                        <div
                            class="top_title w-full  md:w-1/2 md:h-full flex flex-col sm:flex-row justify-start items-center md:-mt-80 -mt-96">
                            <img src="/hab/images/headers/logo.svg" alt="logo"
                                class="transform md:scale-90 scale-50 md:mr-1">
                            <h2 class="md:text-6xl text-5xl text-white text-center sm:text-left font-black"
                                style="font-family: Mulish">Hostel
                                Affairs Board</h2>
                        </div>


                </section>
                <div class="overlay "></div>


            </div>

        </div>

    </div>


</header>